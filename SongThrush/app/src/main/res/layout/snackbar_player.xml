<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.facebook.drawee.view.SimpleDraweeView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/songImage"
            app:placeholderImage="@color/colorPrimaryDark"
            android:layout_alignParentTop="true"

            android:layout_alignParentStart="true"
           />

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/songImage"
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/songImage"
            android:layout_marginTop="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="song name"
            android:textAllCaps="true"/>
        <ImageView
            app:layout_constraintTop_toTopOf="@id/songName"
            android:id="@+id/play"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/songName"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>